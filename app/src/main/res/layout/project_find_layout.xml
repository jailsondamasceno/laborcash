<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_gravity="right"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        app:layout_heightPercent="30%"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:layout_margin="3dp"
        android:padding="8dp"

        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:layout_marginBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/file"
                android:scaleType="fitCenter"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"

                android:id = "@+id/icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />





            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:textColor="@color/blue_500"
                android:shadowRadius="1"
                android:minHeight="20dp"
                android:text="PROJECT NAME......"
                android:textStyle="bold"
                android:maxLines="2"
                android:layout_toRightOf="@+id/icon"
                android:paddingTop="7dp"
                android:paddingLeft="10dp"/>

            <TextView

                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="14sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:minHeight="20dp"
                android:text="Creado: ........"
                android:textStyle="bold"
                android:lines="1"
                android:layout_alignLeft="@+id/icon"
                android:layout_below="@+id/name"
                android:layout_marginTop="15dp"
                />

            <TextView

                android:id="@+id/bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:elevation="5dp"
                android:shadowColor="#000000"

                android:minHeight="20dp"
                android:text="Propuestas: ..."
                android:textStyle="bold"
                android:lines="1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toRightOf="@+id/created"
                android:layout_below="@+id/name"
                />

            <TextView

                android:id="@+id/priceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="14sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:minHeight="20dp"
                android:text="Presupuest: "
                android:textStyle="bold"
                android:lines="1"
                android:layout_marginTop="8dp"
                android:layout_alignLeft="@+id/icon"
                android:layout_below="@+id/created"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:textColor="@color/blue_500"
                android:shadowRadius="1"
                android:text=""
                android:textStyle="bold"
                android:lines="1"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/priceText"
                android:layout_below="@+id/created"/>

            <TextView
                android:id="@+id/gridNoted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceText"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/blue_500"
                android:layout_alignLeft="@+id/icon"
                />
            <!--<luck.materialdesign.tabsnavigator.StaggeredTextGridView-->
                <!--android:id="@+id/gridNoted"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/priceText"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_alignLeft="@+id/icon"-->
                <!--android:numColumns="auto_fit"/>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.percent.PercentRelativeLayout>