<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <!--<android.support.v7.widget.Toolbar-->
    <!--android:id="@+id/push_tool_bar"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_width="match_parent"-->
    <!--android:background="@color/ColorPrimary"-->
    <!--android:elevation="2dp"-->
    <!--android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android" />-->


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:layout_margin="8dp"
        android:padding="8dp"

        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/file"
                android:scaleType="fitCenter"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"

                android:id = "@+id/icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />





            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:textColor="@color/blue_500"
                android:shadowRadius="1"
                android:minHeight="20dp"
                android:text="PROJECT NAME......"
                android:textStyle="bold"
                android:lines="1"
                android:layout_toRightOf="@+id/icon"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"/>

            <TextView

                android:id="@+id/created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:minHeight="20dp"
                android:text="Creado: ........"
                android:textStyle="bold"
                android:lines="1"
                android:layout_alignLeft="@+id/icon"
                android:layout_below="@+id/name"
                android:layout_marginTop="15dp"
                />

            <TextView

                android:id="@+id/bids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="16sp"
                android:elevation="5dp"
                android:shadowColor="#000000"

                android:minHeight="20dp"
                android:text="Propuestas: ..."
                android:textStyle="bold"
                android:lines="1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/created"
                android:layout_below="@+id/name"
                />


            <TextView

                android:id="@+id/budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:minHeight="20dp"
                android:text="Presupuesto: ........"
                android:textStyle="bold"
                android:lines="1"
                android:layout_alignLeft="@+id/created"
                android:layout_below="@+id/created"
                android:layout_marginTop="15dp"
                />

            <TextView

                android:id="@+id/skill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16sp"
                android:elevation="5dp"
                android:shadowColor="#000000"
                android:background="#cecece"
                android:padding="3dp"
                android:textColor="@color/blue_500"
                android:minHeight="20dp"
                android:text="Skills required..."
                android:maxLength="500"
                android:textStyle="bold"
                android:lines="1"
                android:layout_alignLeft="@+id/budget"
                android:layout_below="@+id/budget"
                android:layout_marginTop="15dp"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>