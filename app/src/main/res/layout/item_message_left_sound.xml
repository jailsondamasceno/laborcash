<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <me.himanshusoni.chatmessageview.ChatMessageView android:layout_toLeftOf="@+id/ivUserChat"
        android:layout_toStartOf="@+id/ivUserChat"
        android:id="@+id/contentMessageChat"
        app:layout_widthPercent="50%"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="end"
        app:cmv_arrowMargin="3dp"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="#fff"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_contentPadding="5dp"
        app:cmv_cornerRadius="3dp"
        app:cmv_showArrow="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPlay"
            android:src="@drawable/music"
            />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/soundProgress"
            android:layout_toRightOf="@+id/btnPlay"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundCurTime"
            android:text="0:00"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/soundProgress"
            android:layout_alignLeft="@+id/soundProgress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/soundMaxTime"
            android:text="0:00"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/soundProgress"
            android:layout_alignRight="@+id/soundProgress"/>
   </me.himanshusoni.chatmessageview.ChatMessageView>

</android.support.percent.PercentRelativeLayout>